<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context="com.ekosp.bakingapps.detail.StepListFragment">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/video_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

    <TextView
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:text="@string/step_s_detail"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        tools:text="@string/dummy_detail_step"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_20sp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:gravity="center" >

            <Button
                android:id="@+id/prevStepButon"
                android:background="@drawable/prev_button"
                android:layout_width="@dimen/width_64dp"
                android:layout_height="@dimen/width_64dp" />

        <TextView
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:id="@+id/stepPosition"
            android:layout_width="wrap_content"
            tools:text="@string/step_position"
            android:gravity="center"
            android:textSize="@dimen/text_20sp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/nextStepButon"
            android:background="@drawable/next_button"
            android:gravity="center|center_vertical"
            android:layout_width="@dimen/width_64dp"
            android:layout_height="@dimen/width_64dp" />

    </LinearLayout>

</LinearLayout>